<h2>@ViewBag.Title</h2>
<p data-bind="text: MessageToUser"></p>

<div>
    <div class="form-group">
        <label class="control-label">ID No.: </label>
        <span class="form-control" data-bind="text: FisherId"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Name: </label>
        <span class="form-control" data-bind="text: LastName"></span>
    </div>

    <table class="table table-striped">
        <tr>
            <th>Fish Name</th>
            <th>Qty (kg)</th>
            <th>Unit Price</th>
            <th>Sub-Total</th>
        </tr>
        <tbody data-bind="foreach: FishCatches">
            <td class="form-group"><span class="form-control input-sm" data-bind="text: FishName"></span></td>
            <td class="form-group"><span class="form-control input-sm text-right" data-bind="text: Qty"></span></td>
            <td class="form-group"><span class="form-control input-sm text-right" data-bind="text: UnitPrice"></span></td>
            <td class="form-group"><span class="form-control input-sm text-right" data-bind="text: SubTotal"></span></td>
        </tbody>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td class="form-group"><span class="form-control text-right">Total</span></td>
            <td class="form-group"><span class="form-control text-right" data-bind="text: Total"></span></td>
        </tr>
    </table>

</div>

<p><a href="/Fisherfolks/Index" class="btn btn-default btn-sm">&laquo; Back to List</a></p>